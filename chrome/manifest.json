{
  "manifest_version": 2,
  "name": "FlowCrypt: Encrypt Gmail with PGP",
  "description": "Simple end-to-end encryption to secure email and attachments on Google.",
  "version": "[will be replaced during build]",
  "browser_action": {
    "default_icon": {
      "16": "/img/logo/flowcrypt-logo-16-16.png",
      "19": "/img/logo/flowcrypt-logo-19-19.png",
      "24": "/img/logo/flowcrypt-logo-24-24.png",
      "32": "/img/logo/flowcrypt-logo-32-32.png",
      "48": "/img/logo/flowcrypt-logo-48-48.png",
      "64": "/img/logo/flowcrypt-logo-64-64.png",
      "128": "/img/logo/flowcrypt-logo-128-128.png"
    },
    "default_title": "FlowCrypt Encryption for Gmail",
    "default_popup": "/chrome/popups/default.htm"
  },
  "icons": {
    "16": "/img/logo/flowcrypt-logo-16-16.png",
    "19": "/img/logo/flowcrypt-logo-19-19.png",
    "24": "/img/logo/flowcrypt-logo-24-24.png",
    "32": "/img/logo/flowcrypt-logo-32-32.png",
    "48": "/img/logo/flowcrypt-logo-48-48.png",
    "64": "/img/logo/flowcrypt-logo-64-64.png",
    "128": "/img/logo/flowcrypt-logo-128-128.png"
  },
  "permissions": ["storage", "tabs", "*://*/*", "unlimitedStorage", "clipboardWrite", "webRequest"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*", "*://inbox.google.com/*"],
      "css": ["/css/webmail.css"],
      "js": [
        "/lib/purify.min.js", "/lib/jquery.min.js", "/lib/openpgp.js", "/js/common/storage.js", "/js/common/common.js",
        "/js/content_scripts/factory.js", "/js/content_scripts/inject.js", "/js/content_scripts/notifications.js", "/js/content_scripts/setup.js",
        "/js/content_scripts/webmail/gmail_element_replacer.js", "/js/content_scripts/webmail/inbox_element_replacer.js", 
        "/js/content_scripts/webmail/webmail.js"
      ]
    },
    {
      "matches": ["*://accounts.google.com/o/oauth2/approval*"],
      "js": ["/lib/purify.min.js", "/lib/jquery.min.js", "/js/common/common.js", "/js/content_scripts/oauth_window/google.js"]
    },
    {
      "matches": ["https://flowcrypt.com/stripe*", "https://cryptup.org/stripe*"],
      "js": ["/lib/purify.min.js", "/lib/jquery.min.js", "/js/common/common.js", "/js/content_scripts/checkout/stripe.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "/lib/purify.min.js",
      "/lib/jquery.min.js",
      "/lib/openpgp.js",
      "/lib/emailjs/punycode.js",
      "/lib/emailjs/emailjs-stringencoding.js",
      "/lib/emailjs/emailjs-mime-codec.js",
      "/lib/emailjs/emailjs-mime-types.js",
      "/lib/emailjs/emailjs-addressparser.js",
      "/lib/emailjs/emailjs-mime-builder.js",
      "/lib/emailjs/emailjs-mime-parser.js",
      "/js/common/mnemonic.js",
      "/js/common/storage.js",
      "/js/common/common.js",
      "/js/common/bg_exec.js",
      "/js/background_process/inject.js",
      "/js/background_process/attests.js",
      "/js/background_process/migrations.js",
      "/js/background_process/background_process.js"
    ]
  },
  "web_accessible_resources": [
    "/css/webmail.css",
    "/img/logo/logo.svg",
    "/img/svgs/reply-icon.svg",
    "/img/svgs/spinner-white-small.svg",
    "/img/svgs/spinner-green-small.svg",
    "/img/logo/flowcrypt-logo-19-19.png",
    "/chrome/elements/compose.htm",
    "/chrome/elements/reply_pubkey_mismatch.htm",
    "/chrome/elements/pgp_block.htm",
    "/chrome/elements/setup_dialog.htm",
    "/chrome/elements/attachment.htm",
    "/chrome/elements/passphrase.htm",
    "/chrome/elements/add_pubkey.htm",
    "/chrome/elements/pgp_pubkey.htm",
    "/chrome/elements/subscribe.htm",
    "/chrome/elements/verification.htm",
    "/chrome/elements/attest.htm",
    "/chrome/elements/sending_address.htm",
    "/chrome/elements/shared/footer.htm"
  ],
  "minimum_chrome_version": "55",
  "oauth2": {
    "client_id": "717284730244-ostjo2fdtr3ka4q9td69tdr9acmmru2p.apps.googleusercontent.com",
    "url_code": "https://accounts.google.com/o/oauth2/auth",
    "url_tokens": "https://www.googleapis.com/oauth2/v4/token",
    "url_redirect": "urn:ietf:wg:oauth:2.0:oob:auto",
    "state_header": "CRYPTUP_STATE_",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
