{
  "compilerOptions": {
    "target": "ES2017",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "checkJs": false,
    "outDir": "build/chrome",
    "baseUrl": "./extension",
    "paths": {
      "jquery": ["lib/jquery.min.js", "COMMENT"],
      "openpgp": ["lib/openpgp.js", "COMMENT"],
      "dompurify": ["types/purify.d.ts", "lib/purify.min.js", "COMMENT"],
      "anchorme": ["lib/anchorme.js", "COMMENT"],
      "fine-uploader": ["lib/fine-uploader.js", "COMMENT"],
      "clipboard": ["lib/clipboard.js", "COMMENT"],
      "iso-8859-2": ["lib/iso-8859-2.js", "COMMENT"],
      "zxcvbn": ["lib/zxcvbn.js", "COMMENT"],
      "emailjs-mime-parser": ["lib/emailjs/emailjs-mime-parser.js", "COMMENT"],
      "emailjs-mime-builder": ["lib/emailjs/emailjs-mime-builder.js", "COMMENT"],
      "featherlight": ["lib/featherlight/featherlight.js", "COMMENT"]
    },
    "typeRoots": [
      "./extension/types"
    ]
  },
  "include": [
    "./extension/**/*.ts"
  ],
  "exclude": [
    "./extension/js/content_scripts/**/*",
    "**/build/**",
    "**/node_modules/**"
  ]
}